<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>PageFilter</filter-name>
        <filter-class>filter.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/Admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DemoServlet</servlet-name>
        <servlet-class>servlets.DemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>servlets.CourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>servlets.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>servlets.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RelationController</servlet-name>
        <servlet-class>servlets.RelationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeeController</servlet-name>
        <servlet-class>servlets.FeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>servlets.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MailController</servlet-name>
        <servlet-class>servlets.MailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
        <url-pattern>/About</url-pattern>
        <url-pattern>/Contact</url-pattern>
        <url-pattern>/Services</url-pattern>
        <url-pattern>/PageNotFound</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/Admin/Course/Add</url-pattern>
        <url-pattern>/Admin/Course/Display</url-pattern>
        <url-pattern>/Admin/Course/Edit</url-pattern>
        <url-pattern>/Admin/Course/Update</url-pattern>
        <url-pattern>/Admin/Course/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/Admin/Home</url-pattern>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/Admin/Student/Add</url-pattern>
        <url-pattern>/Admin/Student/Edit</url-pattern>
        <url-pattern>/Admin/Student/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RelationController</servlet-name>
        <url-pattern>/Admin/Relation/Add</url-pattern>
        <url-pattern>/Admin/Relation/Display</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeeController</servlet-name>
        <url-pattern>/Admin/Fee/Pay</url-pattern>
        <url-pattern>/Admin/Fee/Display</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/PageNotFound</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/Admin/User/Register</url-pattern>
        <url-pattern>/Admin/User/Validate</url-pattern>
        <url-pattern>/Admin/User/Details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MailController</servlet-name>
        <url-pattern>/Admin/Mail/Send</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
